<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/item_margin_and_padding"
    android:paddingEnd="@dimen/item_margin_and_padding"
    android:paddingTop="@dimen/item_margin_and_padding">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_list_height">
        <LinearLayout
            android:layout_width="@dimen/item_margin_and_padding"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:id="@+id/note_category"
            android:orientation="vertical" />
        <RelativeLayout
            android:id="@+id/recycler_click"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_margin_and_padding"
            android:focusable="true">
            <RelativeLayout
                android:layout_marginStart="@dimen/item_margin_and_padding"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notes_title"
                    android:textSize="@dimen/text_title_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"/>
                <TextView
                    android:id="@+id/note_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notes_title"
                    android:hint="@string/updated"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/lock_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_outline_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_and_padding"
                android:contentDescription="@string/desc_image" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>